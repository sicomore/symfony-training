{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <th>Equipe1</th>
                <th>Score1</th>
                <th>Equipe2</th>
                <th>Score2</th>
                <th>Result</th>
            </tr>
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.equipe1 }}</td>
                <td>{{ game.score1 }}</td>
                <td>{{ game.equipe2 }}</td>
                <td>{{ game.score2 }}</td>
                <td>{{ maxBold(game.score1, game.score2)|raw }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('game_index') }}">back to list</a>

    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
